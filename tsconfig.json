{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "outDir": "./dist",
    "noImplicitAny": true,
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__", "node_modules", "**/*.test.ts"]
}
