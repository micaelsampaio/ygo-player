{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "DOM"
    ],
    "outDir": "./dist",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "module": "esnext",
    "target": "es2020",
    "jsx": "react-jsx",
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "incremental": true,
    "isolatedModules": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "__tests__",
    "node_modules",
    "tests"
  ]
}