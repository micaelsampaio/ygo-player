{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "lib": [
      "ESNext.Array",
      "DOM",
      "ESNext"
    ],
    "outDir": "./dist",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "module": "esnext",
    "jsx": "react-jsx",
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "incremental": true,
    "isolatedModules": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "__tests__",
    "node_modules",
    "tests"
  ]
}